extends layout
block content
  form(method='POST',id='reset-password')
    legend Reset Password
    .form-group
      label(for='password') New Password
      input.form-control(type='password', name='newpassword', value='', placeholder='New password', autofocus=true)
    .form-group
      label(for='confirm') Confirm Password
      input.form-control(type='password', name='confirm', value='', placeholder='Confirm password')
    .form-group
      button.btn.btn-primary(type='submit') Update Password
      
script
    $(function() {
      // validate the login form before submit
      $("#reset-password").ResetValidator({});
    });      